{% block title %}Borrow{% endblock %}

{% block body %}
    <h1>Borrow</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ borrow.id }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ borrow.startDate ? borrow.startDate|date('Y-m-d') : '' }}</td>
