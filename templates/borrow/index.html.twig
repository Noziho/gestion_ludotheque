{% extends 'base.html.twig' %}

{% block title %}Borrow index{% endblock %}

{% block body %}
    <h1>Borrow index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>StartDate</th>
                <th>EndDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for borrow in borrows %}
            <tr>
                <td>{{ borrow.id }}</td>
                <td>{{ borrow.startDate ? borrow.startDate|date('Y-m-d') : '' }}</td>
                <td>{{ borrow.endDate ? borrow.endDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_borrow_show', {'id': borrow.id}) }}">show</a>
                    <a href="{{ path('app_borrow_edit', {'id': borrow.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_borrow_new') }}">Create new</a>
{% endblock %}
