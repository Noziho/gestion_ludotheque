{% extends 'base.html.twig' %}

{% block title %}Collection index{% endblock %}

{% block body %}
    <h1 class="text-2xl ml-4">Mes collections : </h1>

    <div class="w-full flex flex-col ">
        {% for collection in collections %}
            <div class="bg-lightenDarkBlue w-1/2 p-4 mt-4 self-center">
                <h2 class="text-2xl">{{ collection.name }}</h2>
                <p>{{ collection.category.name }}</p>
                <div class="mt-4">
                    <a href="{{ path('app_collection_edit', {'id': collection.id}) }}">Edit</a>
                    <a href="{{ path('app_collection_delete', {'id' : collection.id}) }}" class="ml-4">Delete</a>
                </div>
            </div>
        {% else %}
            <p>Vous avez aucunne collections</p>
        {% endfor %}
    </div>

    <a href="{{ path('app_collection_new') }}">Create new</a>
{% endblock %}
